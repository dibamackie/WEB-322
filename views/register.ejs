<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lego Collection - Register</title>
    <link href="/css/main.css" rel="stylesheet">
</head>
<body>
    <header>
        <%- include('partials/navbar', { page: '/register' }) %>
    </header>

    <main class="container mx-auto">
        <section class="hero bg-base-200">
            <div class="hero-content text-center">
                <div class="max-w-md">
                    <h1 class="text-5xl font-bold">Register</h1>
                    <p class="py-6">Please provide your credentials below</p>
                </div>
            </div>
        </section>

        <section class="max-w-md mx-auto py-6">
            <div class="card bg-base-100 shadow-xl p-6">
                <form method="post" action="/register">
                    <div class="form-control flex flex-col gap-2">
                        <label for="userName" class="label inline-block">
                            <span class="label-text">User Name</span>
                        </label>
                        <input id="userName" name="userName" type="text" placeholder="User Name" required class="input input-bordered">
                    </div>

                    <div class="form-control flex flex-col gap-2">
                        <label for="password" class="label inline-block">
                            <span class="label-text">Password</span>
                        </label>
                        <input id="password" name="password" type="password" placeholder="Password" required class="input input-bordered">
                    </div>

                    <div class="form-control flex flex-col gap-2">
                        <label for="password2" class="label inline-block">
                            <span class="label-text">Confirm Password</span>
                        </label>
                        <input id="password2" name="password2" type="password" placeholder="Confirm Password" required class="input input-bordered">
                    </div>

                    <div class="form-control flex flex-col gap-2">
                        <label for="email" class="label inline-block">
                            <span class="label-text">Email Address</span>
                        </label>
                        <input id="email" name="email" type="email" placeholder="Email Address" required class="input input-bordered">
                    </div>
                    <br>
                    <br>
                    <div class="form-control mt-6">
                        <button type="submit" class="btn btn-primary w-full">Register</button>
                    </div>
                </form>
            </div>
        </section>
    </main>
    <script src="/server.js"></script>
</body>
</html>
